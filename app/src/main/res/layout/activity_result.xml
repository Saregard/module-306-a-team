<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272343"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/congrats"/>

    <TextView
        android:id="@+id/congrats"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="50dp"
        android:text="@string/congratulations_your_score_is"
        android:textAlignment="center"
        android:textColor="#ffa384"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="412dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#ffa384"
        android:textColor="#272343"
        android:text="@string/play_again"
        android:textAlignment="center"
        android:clickable="true"
        android:paddingTop="14dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffa384"
        android:clickable="true"
        android:paddingTop="14dp"
        android:text="@string/quit_game"
        android:textAlignment="center"
        android:textColor="#272343" />
</LinearLayout>


